<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inf.unideb.hu.chessgame.gui.controller.MainController">
    <ImageView fitHeight="500.0" fitWidth="500.0">
        <image>
            <Image url="@../images/background.png" />
        </image>
    </ImageView>

    <Button id="startButton" fx:id="startButton" layoutX="248.0" layoutY="180.0" mnemonicParsing="false" onAction="#btnStartClicked" prefHeight="44.0" prefWidth="91.0" text="START" textFill="#165280">
        <font>
            <Font name="Impact" size="20.0" />
        </font>
    </Button>
    <Button id="cancelButton" fx:id="cancelButton" layoutX="248.0" layoutY="260.0" mnemonicParsing="false" onAction="#btnExitClicked" prefHeight="44.0" prefWidth="91.0" text="Cancel" textFill="#165280">
        <font>
            <Font name="Impact" size="20.0" />
        </font>
    </Button>
</AnchorPane>
